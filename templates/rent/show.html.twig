{% extends 'base.html.twig' %}

{% block title %}Rent{% endblock %}

{% block body %}
    <h1>Rent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rent.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ rent.title }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ rent.city }}</td>
            </tr>
            <tr>
                <th>MonthPrice</th>
                <td>{{ rent.monthPrice }}</td>
            </tr>
            <tr>
                <th>LivingSpace</th>
                <td>{{ rent.livingSpace }}</td>
            </tr>
            <tr>
                <th>LandSpace</th>
                <td>{{ rent.landSpace }}</td>
            </tr>
            <tr>
                <th>Rooms</th>
                <td>{{ rent.rooms }}</td>
            </tr>
            <tr>
                <th>Meuble</th>
                <td>{{ rent.meuble ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NotMeuble</th>
                <td>{{ rent.notMeuble ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Dpe</th>
                <td>{{ rent.dpe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rent_index') }}">back to list</a>

    <a href="{{ path('rent_edit', {'id': rent.id}) }}">edit</a>

    {{ include('rent/_delete_form.html.twig') }}
{% endblock %}
