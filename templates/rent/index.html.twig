{% extends 'base.html.twig' %}

{% block title %}Rent index{% endblock %}

{% block body %}
    <h1>Rent index</h1>
    <div class="container">
        <h2>Tous nos biens en locatioon</h2>
        <div class="row flex">
            {% for rent in rents %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('rent_show', {id: rent.id, slug: rent.slug}) }}">{{ rent.title }}</a>
                            </h5>
                            <p class="card-text">{{ rent.city }}</p>
                            <div class="text-primary">{{ rent.monthPrice | number_format(0, '', ' ') }} â‚¬</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>City</th>
                <th>MonthPrice</th>
                <th>LivingSpace</th>
                <th>LandSpace</th>
                <th>Rooms</th>
                <th>Meuble</th>
                <th>NotMeuble</th>
                <th>Dpe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rent in rents %}
            <tr>
                <td>{{ rent.id }}</td>
                <td>{{ rent.title }}</td>
                <td>{{ rent.city }}</td>
                <td>{{ rent.monthPrice }}</td>
                <td>{{ rent.livingSpace }}</td>
                <td>{{ rent.landSpace }}</td>
                <td>{{ rent.rooms }}</td>
                <td>{{ rent.meuble ? 'Yes' : 'No' }}</td>
                <td>{{ rent.notMeuble ? 'Yes' : 'No' }}</td>
                <td>{{ rent.dpe }}</td>
                <td>
                    {% if app.user %}
                    <a href="{{ path('rent_edit', {'id': rent.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user %}
    <a href="{{ path('rent_new') }}">Create new</a>
    {% endif %}
{% endblock %}
