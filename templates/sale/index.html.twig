{% extends 'base.html.twig' %}

{% block title %}Bien a vendre{% endblock %}

{% block body %}
    {% for sale in sales %}
    <div class="card">
    <img src="{{ vich_uploader_asset(sale, 'imageFile') }}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{ sale.annonceTitle }}</h5>
      <p class="card-text">{{ sale.priceFAI }}</p>
    </div>
    </div>
    {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MandatNumber</th>
                <th>Type</th>
                <th>AnnonceTitle</th>
                <th>PriceFAI</th>
                <th>NetSellerPrice</th>
                <th>Pourcentage</th>
                <th>Honorary</th>
                <th>LivingArea</th>
                <th>LandArea</th>
                <th>Descriptif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.id }}</td>
                <td>{{ sale.mandatNumber }}</td>
                <td>{{ sale.type ? sale.type|join(', ') : '' }}</td>
                <td>{{ sale.annonceTitle }}</td>
                <td>{{ sale.priceFAI }}</td>
                <td>{{ sale.netSellerPrice }}</td>
                <td>{{ sale.pourcentage }}</td>
                <td>{{ sale.honorary }}</td>
                <td>{{ sale.livingArea }}</td>
                <td>{{ sale.landArea }}</td>
                <td>{{ sale.descriptif }}</td>
                <td>
                    <a href="{{ path('sale_show', {'id': sale.id}) }}">show</a>
                    {% if app.user %}
                    <a href="{{ path('sale_edit', {'id': sale.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user %}
    <a href="{{ path('sale_new') }}">Create new</a>
    {% endif %}
{% endblock %}
