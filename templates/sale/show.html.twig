{% extends 'base.html.twig' %}

{% block title sale.annonceTitle %}

{% block body %}
    <h1>{{ sale.annonceTitle}}</h1>
    <div class="jumbotron">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col md-4">
                    <h1>{{ sale.annonceTitle }}</h1>
                    <h2>{{ sale.priceFAI }} Euros - {{ sale.type }}</h2>
                </div>
            </div>
        </div>
    </div>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristique</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ sale.LivingArea }} m²</td>
                    </tr>
                    <tr>
                        <td>Surface du terrain</td>
                        <td>{{ sale.landArea }}</td>
                    </tr>
                    <tr>
                        <td>Prix TTC</td>
                        <td>{{ sale.priceFAI }}</td>
                    </tr>
                    <tr>
                        <td>Prix Net Vendeur</td>
                        <td>{{ sale.netSellerPrice }}</td>
                    </tr>
                    <tr>
                        <td>Honoraire de l'agence</td>
                        <td> {{ sale.honorary }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Descriptif</h2>
                <p>{{ sale.descriptif }}</p>
            </div>
        </div>
        <div class="sale_form">
            <a href="" class="btn btn-primary">Contactez nous</a>
        </div>
        <div id="contactForm" class="mt-4">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">{{ form_row(form.firstname) }}</div>
                <div class="col">{{ form_row(form.lastname) }}</div>
            </div>
            <div class="row">
                <div class="col">{{ form_row(form.phone) }}</div>
                <div class="col">{{ form_row(form.email) }}</div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <button class="btn btn-primary">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
        <p class="sale_autor md-4"> Contact: Anaïs Chaveneau 06.20.22.78.54 et Mail: anais.immobilier37@gmail.com</p>
    </div>
    
    {% if app.user %}
    <a href="{{ path('sale_index') }}">back to list</a>

    <a href="{{ path('sale_edit', {'id': sale.id}) }}">edit</a>
    
    {{ include('sale/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
