{% extends 'base.html.twig' %}

{% block title %}Bien a vendre{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">

    <div class="row">
        <div class="col-md-8">
        
        </div>
        <div class="col-md-4">
            <h1>{{ sale.annonceTitle }}</h1>
            <h2>{{ sale.livingArea }} m2</h2>
            <div class="text-primary">{{ sale.priceFAI | number_format(0, '', ' ') }} €</div>
            <a href="btn btn-primary">Contacter l'agence</a>
        </div>
    </div>
</div>
<div class="mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Caractéristique</h2>
            <table class="table table-striped">
                <tr>
                    <td>Type du bien</td>
                    <td>{{ sale.type }}</td>
                </tr>
                <tr>
                    <td>Surface habitable</td>
                    <td>{{ sale.livingArea }}</td>
                </tr>
                <tr>
                    <td>Surface du terrain</td>
                    <td>{{ sale.landArea }}</td>
                </tr>
                <tr>
                    <td>Prix FAI</td>
                    <td>{{ sale.priceFAI }}</td>
                </tr>
                <tr>
                    <td>Prix net Vendeur</td>
                    <td>{{ sale.netSellerPrice }}</td>
                </tr>
                <tr>
                    <td>Honoraire</td>
                    <td>{{ sale.honorary }}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h2>Descriptif du bien</h2>
            <div class="card-text">{{ sale.descriptif}}</div>
        </div>
    </div>  
</div>

    {% if app.user %}
    <a href="{{ path('sale_index') }}">back to list</a>

    <a href="{{ path('sale_edit', {'id': sale.id}) }}">edit</a>

    {{ include('sale/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
