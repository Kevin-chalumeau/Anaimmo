{% extends 'base.html.twig' %}
{% block Title %}Contactez Nous{% endblock %}

{% block body %}
<div class="contact-body">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
        {{ message }}
        </div>
    {% endfor %}
    <h1 class="contact_page_edit_title">Contactez Nous</h1>
        <div class="container contact_box">
            <div class="row justify-content-start">
                <div class="contact_form col-md-8">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-success">{{ button_label|default('Envoyer') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
</div>

{% endblock %}